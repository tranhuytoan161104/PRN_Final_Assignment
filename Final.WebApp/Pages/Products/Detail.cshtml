@page "{id:long}"
@model Final.WebApp.Pages.Products.DetailModel
@{
    ViewData["Title"] = Model.Product?.Name ?? "Chi tiết sản phẩm";
}

<div class="container my-5">

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center">
            <h4>Lỗi</h4>
            <p>@Model.ErrorMessage</p>
            <a asp-page="/Index" class="btn btn-primary">Quay về trang chủ</a>
        </div>
    }
    else if (Model.Product != null)
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Product.Name</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-6">
                @if (Model.Product.Images.Any())
                {
                    <img src="@Model.Product.Images.First().ImageUrl" class="img-fluid rounded" alt="@Model.Product.Name">
                }
                else
                {
                    <img src="https://placehold.co/600x600/EFEFEF/333?text=No+Image" class="img-fluid rounded" alt="No image available">
                }
            </div>

            <div class="col-md-6">
                <h1>@Model.Product.Name</h1>
                <p class="text-muted">Thương hiệu: @Model.Product.BrandName | Danh mục: @Model.Product.CategoryName</p>

                <h2 class="text-danger fw-bold my-3">@Model.Product.Price.ToString("N0") ₫</h2>

                @if (Model.Product.StockQuantity > 0)
                {
                    <p class="text-success">
                        <i class="bi bi-check-circle-fill"></i> Còn hàng (còn lại @Model.Product.StockQuantity sản phẩm)
                    </p>
                }
                else
                {
                    <p class="text-danger">
                        <i class="bi bi-x-circle-fill"></i> Hết hàng
                    </p>
                }

                <form method="post">
                    <div class="input-group mb-3" style="max-width: 200px;">
                        <label class="input-group-text">Số lượng</label>
                        <input type="number" class="form-control" name="Quantity" value="1" min="1" max="@Model.Product.StockQuantity">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg" disabled="@(Model.Product.StockQuantity <= 0)">
                        <i class="bi bi-cart-plus-fill"></i> Thêm vào giỏ hàng
                    </button>
                </form>

            </div>
        </div>

        <div class="mt-5">
            <ul class="nav nav-tabs" id="productTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description-pane" type="button" role="tab">Mô tả chi tiết</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews-pane" type="button" role="tab">Đánh giá (@Model.Product.Reviews.Count)</button>
                </li>
            </ul>
            <div class="tab-content" id="productTabContent">
                <div class="tab-pane fade show active p-3" id="description-pane" role="tabpanel">
                    <p>@Model.Product.Description</p>
                </div>
                <div class="tab-pane fade p-3" id="reviews-pane" role="tabpanel">
                    @if (Model.Product.Reviews.Any())
                    {
                        @foreach (var review in Model.Product.Reviews)
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <strong>@review.UserName</strong>
                                <small class="text-muted ms-2">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                <p class="mb-0">Rating: @review.Rating/5</p>
                                <p>@review.Comment</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Chưa có đánh giá nào cho sản phẩm này.</p>
                    }
                </div>
            </div>
        </div>
    }

</div>