@page
@model Final.WebApp.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container my-5">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @if (Model.Orders.Items.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders.Items)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@order.TotalAmount.ToString("N0") ₫</td>
                            <td><span class="badge bg-primary">@order.Status</span></td>
                            <td class="text-end">
                                <a asp-page="/Orders/Detail" asp-route-orderId="@order.Id" class="btn btn-sm btn-outline-primary">
                                    Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @{
                    var prevDisabled = Model.Orders.PageNumber <= 1 ? "disabled" : "";
                    <li class="page-item @prevDisabled">
                        <a class="page-link" asp-page="/Orders/Index" asp-route-p="@(Model.Orders.PageNumber - 1)">Trước</a>
                    </li>
                }

                @for (int i = 1; i <= Model.Orders.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.Orders.PageNumber ? "active" : "")">
                        <a class="page-link" asp-page="/Orders/Index" asp-route-p="@i">@i</a>
                    </li>
                }

                @{
                    var nextDisabled = Model.Orders.PageNumber >= Model.Orders.TotalPages ? "disabled" : "";
                    <li class="page-item @nextDisabled">
                        <a class="page-link" asp-page="/Orders/Index" asp-route-p="@(Model.Orders.PageNumber + 1)">Sau</a>
                    </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="text-center">
            <p>Bạn chưa có đơn hàng nào.</p>
            <a asp-page="/Index" class="btn btn-primary">Bắt đầu mua sắm</a>
        </div>
    }
</div>