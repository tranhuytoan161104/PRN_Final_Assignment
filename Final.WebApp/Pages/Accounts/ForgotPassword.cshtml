@page
@model Final.WebApp.Pages.Accounts.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }

                @if (Model.CurrentStep == 1)
                {
                    <form method="post" asp-page-handler="EnterEmail">
                        <p>Vui lòng nhập email của tài khoản để tiếp tục.</p>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Tiếp theo</button>
                        </div>
                    </form>
                }
                @if (Model.CurrentStep == 2)
                {
                    <form method="post" asp-page-handler="VerifyAnswer">
                        <input type="hidden" asp-for="Email" />
                        <p>Vui lòng trả lời câu hỏi bảo mật của bạn:</p>
                        <p class="fw-bold">@Model.SecurityQuestion</p>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Answer" class="form-label">Câu trả lời</label>
                            <input asp-for="Answer" class="form-control" />
                            <span asp-validation-for="Answer" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Xác nhận</button>
                            <button type="submit" class="btn btn-link" asp-page-handler="SendRecoveryEmail">Quên câu trả lời? Gửi email</button>
                        </div>
                    </form>
                }
                <p class="mt-3 text-center">
                    <a asp-page="/Account/Login">Quay lại trang Đăng nhập</a>
                </p>
            </div>
        </div>
    </div>
</div>