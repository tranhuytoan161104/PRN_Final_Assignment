@page "{userId:long}"
@model Final.WebApp.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container my-5">
    <h2>@ViewData["Title"]: @Model.UserProfile.Email</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Cập nhật Trạng thái</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="UpdateStatus" asp-route-userId="@Model.UserProfile.Id">
                        <div class="mb-3">
                            <label asp-for="StatusInput.Status" class="form-label"></label>
                            <select asp-for="StatusInput.Status" asp-items="Model.Statuses" class="form-select"></select>
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu Trạng thái</button>
                    </form>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Owner"))
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Cập nhật Vai trò (Chỉ Owner)</div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="UpdateRole" asp-route-userId="@Model.UserProfile.Id">
                            <div class="mb-3">
                                <label asp-for="RoleInput.Role" class="form-label"></label>
                                <select asp-for="RoleInput.Role" asp-items="Model.Roles" class="form-select"></select>
                            </div>
                            <button type="submit" class="btn btn-warning">Lưu Vai trò</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="mt-4">
        <a asp-page="/Admin/Users/Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>