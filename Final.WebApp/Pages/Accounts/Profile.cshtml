@page
@model Final.WebApp.Pages.Accounts.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
        <hr />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="card mb-4">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control" value="@Model.UserProfile.Email" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Vai trò</label>
                        <input class="form-control" value="@Model.UserProfile.Role" readonly />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProfileInput.FirstName" class="form-label"></label>
                        <input asp-for="ProfileInput.FirstName" class="form-control" />
                        <span asp-validation-for="ProfileInput.FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProfileInput.LastName" class="form-label"></label>
                        <input asp-for="ProfileInput.LastName" class="form-control" />
                        <span asp-validation-for="ProfileInput.LastName" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-page="/Accounts/ChangePassword" class="btn btn-secondary">Đổi mật khẩu</a>
                </form>
            </div>
        </div>
    </div>
</div>