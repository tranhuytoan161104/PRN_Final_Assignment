@page
@model Final.WebApp.Pages.Accounts.LinkRecoveryEmailModel
@{
    ViewData["Title"] = "Bảo mật & Khôi phục";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>
        <hr />

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Liên kết Email khôi phục</h5>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <p class="text-muted">
                        Thêm một email đã được xác minh để tăng cường bảo mật và sử dụng làm phương án khôi phục thay thế khi bạn quên mật khẩu.
                    </p>
                    <div class="mb-3">
                        <label asp-for="RecoveryEmailInput.RecoveryEmail" class="form-label">Địa chỉ Email liên kết</label>
                        <input asp-for="RecoveryEmailInput.RecoveryEmail" class="form-control" placeholder="nhapemail@gmail.com" />
                        <span asp-validation-for="RecoveryEmailInput.RecoveryEmail" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Gửi link xác thực</button>
                    <a asp-page="/Accounts/Profile" class="btn btn-light">Quay về hồ sơ</a>
                </form>

                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
            </div>
        </div>
    </div>
</div>