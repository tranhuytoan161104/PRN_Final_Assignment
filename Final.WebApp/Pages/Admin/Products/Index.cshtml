@page
@model Final.WebApp.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-page="/Admin/Products/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo sản phẩm mới
        </a>
    </div>

    <!-- Form Lọc & Tìm kiếm -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="Query.Name" class="form-label">Tên sản phẩm</label>
                    <input asp-for="Query.Name" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="Query.CategoryId" class="form-label">Danh mục</label>
                    <select asp-for="Query.CategoryId" asp-items="Model.Categories" class="form-select">
                        <option value="">Tất cả</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Query.BrandId" class="form-label">Thương hiệu</label>
                    <select asp-for="Query.BrandId" asp-items="Model.Brands" class="form-select">
                        <option value="">Tất cả</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Lọc</button>
                </div>
            </form>
        </div>
    </div>

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products.Items)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("N0") ₫</td>
                    <td class="text-center">
                        <a asp-page="/Admin/Products/Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-secondary">
                            Sửa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @{
                var prevDisabled = Model.Products.PageNumber <= 1 ? "disabled" : "";
                <li class="page-item @prevDisabled">
                    <a class="page-link" asp-page="/Admin/Products/Index"
                       asp-all-route-data="@HttpContext.Request.Query.ToDictionary(q => q.Key, q => q.Value.ToString())"
                       asp-route-pageNumber="@(Model.Products.PageNumber - 1)">Trước</a>
                </li>
            }

            @for (int i = 1; i <= Model.Products.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Products.PageNumber ? "active" : "")">
                    <a class="page-link" asp-page="/Admin/Products/Index"
                       asp-all-route-data="@HttpContext.Request.Query.ToDictionary(q => q.Key, q => q.Value.ToString())"
                       asp-route-pageNumber="@i">@i</a>
                </li>
            }

            @{
                var nextDisabled = Model.Products.PageNumber >= Model.Products.TotalPages ? "disabled" : "";
                <li class="page-item @nextDisabled">
                    <a class="page-link" asp-page="/Admin/Products/Index"
                       asp-all-route-data="@HttpContext.Request.Query.ToDictionary(q => q.Key, q => q.Value.ToString())"
                       asp-route-pageNumber="@(Model.Products.PageNumber + 1)">Sau</a>
                </li>
            }
        </ul>
    </nav>
</div>